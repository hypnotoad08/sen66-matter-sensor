# РћђРћђРћђРћђРћђ ­ЪДа Target and Platform РћђРћђРћђРћђРћђ
CONFIG_IDF_TARGET="esp32s3"

# РћђРћђРћђРћђРћђ ­ЪЊд Flash Configuration РћђРћђРћђРћђРћђ
CONFIG_ESPTOOLPY_FLASHMODE_QIO=y
CONFIG_ESPTOOLPY_FLASHSIZE_16MB=y

# РћђРћђРћђРћђРћђ ­ЪДа PSRAM (Arduino Nano ESP32 has 8MB OPI PSRAM) РћђРћђРћђРћђРћђ
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_SPEED_80M=y

# РћђРћђРћђРћђРћђ Partition Table РћђРћђРћђРћђРћђ
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_OFFSET=0x8000

# РћђРћђРћђРћђРћђ ­ЪЊХ Thread over native radio (no RCP) РћђРћђРћђРћђРћђ
CONFIG_OPENTHREAD_RADIO_NATIVE=y
CONFIG_OPENTHREAD_ENABLED=y
CONFIG_OPENTHREAD_PLATFORM_ESP32=y
CONFIG_OPENTHREAD_RCP=n
CONFIG_OPENTHREAD_HOST_CONNECTION_MODE_NONE=y
CONFIG_OPENTHREAD_BORDER_ROUTER=y
CONFIG_OPENTHREAD_COMMISSIONER=y
CONFIG_OPENTHREAD_JOINER=y
CONFIG_OPENTHREAD_SRP_CLIENT=y
CONFIG_OPENTHREAD_DNS_CLIENT=y
CONFIG_OPENTHREAD_LOG_LEVEL_NOTE=y
CONFIG_OPENTHREAD_CLI=n

# РћђРћђРћђРћђРћђ ­Ъїљ IPv6 Support РћђРћђРћђРћђРћђ
CONFIG_LWIP_IPV6_NUM_ADDRESSES=12
CONFIG_LWIP_MULTICAST_PING=y
CONFIG_LWIP_HOOK_IP6_ROUTE_DEFAULT=y
CONFIG_LWIP_HOOK_ND6_GET_GW_DEFAULT=y

# РћђРћђРћђРћђРћђ ­Ъћљ Crypto / Matter РћђРћђРћђРћђРћђ
CONFIG_LIBSODIUM_USE_MBEDTLS_SHA=y
CONFIG_MBEDTLS_HKDF_C=y

# РћђРћђРћђРћђРћђ mbedTLS for ECJPAKE and DTLS РћђРћђРћђРћђРћђ
CONFIG_MBEDTLS_KEY_EXCHANGE_ECJPAKE=y
CONFIG_MBEDTLS_ECJPAKE_C=y
CONFIG_MBEDTLS_SSL_PROTO_DTLS=y

# РћђРћђРћђРћђРћђ Optional Shell РћђРћђРћђРћђРћђ
CONFIG_ENABLE_CHIP_SHELL=y

# РћђРћђРћђРћђРћђ OTA (optional) РћђРћђРћђРћђРћђ
CONFIG_ENABLE_OTA_REQUESTOR=n

# РћђРћђРћђРћђРћђ Disable Wi-Fi and SoftAP РћђРћђРћђРћђРћђ
CONFIG_ENABLE_WIFI_STATION=n
CONFIG_ENABLE_WIFI_AP=n
CONFIG_ESP_WIFI_SOFTAP_SUPPORT=n

# РћђРћђРћђРћђРћђ Freertos Tick Rate РћђРћђРћђРћђРћђ
CONFIG_FREERTOS_HZ=1000

# РћђРћђРћђРћђРћђ Disable Unused Matter Clusters to Save Space РћђРћђРћђРћђРћђ
CONFIG_SUPPORT_APPLICATION_LAUNCHER_CLUSTER=n
CONFIG_SUPPORT_AUDIO_OUTPUT_CLUSTER=n
CONFIG_SUPPORT_MEDIA_INPUT_CLUSTER=n
CONFIG_SUPPORT_MODE_SELECT_CLUSTER=n
CONFIG_SUPPORT_OCCUPANCY_SENSING_CLUSTER=n
CONFIG_SUPPORT_PM1_CONCENTRATION_MEASUREMENT_CLUSTER=n
CONFIG_SUPPORT_PM2_5_CONCENTRATION_MEASUREMENT_CLUSTER=n
CONFIG_SUPPORT_PM10_CONCENTRATION_MEASUREMENT_CLUSTER=n
CONFIG_SUPPORT_TVOC_CONCENTRATION_MEASUREMENT_CLUSTER=n
CONFIG_SUPPORT_NITROGEN_DIOXIDE_CONCENTRATION_MEASUREMENT_CLUSTER=n
CONFIG_SUPPORT_CARBON_DIOXIDE_CONCENTRATION_MEASUREMENT_CLUSTER=n
CONFIG_SUPPORT_USER_LABEL_CLUSTER=n

# РћђРћђРћђРћђРћђ Button Timing РћђРћђРћђРћђРћђ
CONFIG_BUTTON_PERIOD_TIME_MS=20
CONFIG_BUTTON_LONG_PRESS_TIME_MS=5000

# РћђРћђРћђРћђРћђ Native 802.15.4 driver (required for ESP32 OpenThread platform) РћђРћђРћђРћђРћђ
CONFIG_IEEE802154_ENABLED=y
CONFIG_IEEE802154_RX_BUFFER_SIZE=1300
CONFIG_IEEE802154_TX_BUFFER_SIZE=1300

# NIMBLE
CONFIG_BT_ENABLED=y
CONFIG_BT_NIMBLE_ENABLED=y
CONFIG_BT_NIMBLE_EXT_ADV=n
CONFIG_BT_NIMBLE_HCI_EVT_BUF_SIZE=70
CONFIG_USE_BLE_ONLY_FOR_COMMISSIONING=n
